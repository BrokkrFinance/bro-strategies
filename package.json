{
  "name": "solidity-project-template",
  "version": "1.0.0",
  "description": "template for project setup",
  "main": "index.js",
  "author": "block42",
  "license": "MIT",
  "devDependencies": {
    "@aave/core-v3": "^1.13.1",
    "@mangrovedao/hardhat-test-solidity": "^0.0.17",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-solpp": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.18.1",
    "@tenderly/hardhat-tenderly": "^1.1.0",
    "@traderjoe-xyz/core": "^2.4.6",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "chai": "^4.2.0",
    "diamond-standard-reference-implementation": "^1.1.3",
    "dotenv": "^16.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.6.8",
    "hardhat": "^2.10.0",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-deploy": "^0.11.10",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-solpp": "^1.0.1",
    "husky": "^8.0.1",
    "lint-staged": ">=10",
    "pinst": "^3.0.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "compile": "hardhat compile",
    "run:node": "hardhat node",
    "test": "hardhat test",
    "test:localhost": "hardhat test --config ./hardhat.config.ts --network localhost",
    "profile": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage --config ./hardhat-coverage.config.ts --solcoverjs ./.solcover.js",
    "lint:fix": "prettier --write '**.sol' && prettier --write '**.js' && prettier --write '**.ts'",
    "lint:check": "prettier --check '**.sol' && prettier --check '**.js' && prettier --check '**.ts' && hardhat compile && npx solhint --config ./.solhint.json --ignore-path ./.solhintignore 'contracts/**/*.sol'",
    "prepare": "husky install",
    "postinstall": "husky install",
    "lint-staged": "lint-staged;hardhat compile && npx solhint --config ./.solhint.json --ignore-path ./.solhintignore 'contracts/**/*.sol'"
  },
  "lint-staged": {
    "*.sol": "prettier --write",
    "*.js": "prettier --write",
    "*.ts": "prettier --write"
  }
}
